<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activities.HousePagerActivity">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:textStyle="italic|bold"
            android:text="@string/button_house_select"
            android:id="@+id/button_house_list"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/house_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:scaleType="fitCenter"
            android:background="@android:color/darker_gray"
            android:cropToPadding="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/text_image"/>
        <LinearLayout
            android:id="@+id/linear_image_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/house_image">
            <ImageButton
                android:id="@+id/button_image"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@android:drawable/ic_menu_gallery"
                style="?android:attr/borderlessButtonStyle"
                android:contentDescription="@string/text_select_image"/>
            <ImageButton
                android:id="@+id/button_settings"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@android:drawable/ic_menu_manage"
                style="?android:attr/borderlessButtonStyle"
                android:contentDescription="@string/text_settings"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_home_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/linear_image_settings"
            android:layout_below="@id/button_house_list">
            <TextView
                android:id="@+id/text_view_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="19sp"
                android:text="HOUSE TITLE"/>
            <TextView
                android:id="@+id/text_view_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fake_address"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttons_services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_home_data"
            android:weightSum="1">
            <Button
                android:id="@+id/button_services_bills"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="@string/button_services"
                android:layout_weight="0.61"/>
            <ImageButton
                android:id="@+id/button_services_help"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@android:drawable/ic_menu_help"
                style="?android:attr/borderlessButtonStyle"
                android:contentDescription="@string/text_help"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttons_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="horizontal"
            android:layout_below="@+id/buttons_services"
            android:weightSum="1">
            <Button
                android:id="@+id/button_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:text="@string/button_history"
                android:layout_weight="0.61"/>
            <ImageButton
                android:id="@+id/button_history_help"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@android:drawable/ic_menu_help"
                style="?android:attr/borderlessButtonStyle"
                android:contentDescription="@string/text_help"/>
        </LinearLayout>
        <Button
            android:id="@+id/button_basket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/buttons_history"
            android:layout_alignParentRight="true"
            android:text="@string/button_basket"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_add_new_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@android:drawable/ic_input_add"
            android:layout_below="@id/button_basket"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</ScrollView>